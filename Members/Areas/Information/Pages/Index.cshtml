@page
@model Members.Areas.Information.Pages.IndexModel
@{
    ViewData["Title"] = "The Mikish Group - Site Designers";
    ViewData["Description"] = "Professional web development and design services by The Mikish Group. Discover amazing features designed to meet your needs.";
}

<div class="mikish-hero-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-12 col-lg-10">
                <!-- Blue Sun Logo -->
                <div class="mikish-logo-container mb-4">
                    <img src="/Images/Svg/Logos/BlueSun.svg" alt="The Mikish Group - Blue Sun Logo" class="mikish-hero-logo" />
                </div>
                
                <!-- Main Heading -->
                <h1 class="mikish-hero-title mb-3">The Mikish Group</h1>
                <h2 class="mikish-hero-subtitle mb-4">Site Designers</h2>
                <p class="mikish-hero-description mb-5">
                    Discover amazing features and services designed to meet your needs. 
                    Professional web development with modern design and cutting-edge technology.
                </p>
                
                <!-- Action Buttons -->
                <div class="mikish-button-container">
                    <div class="row g-3 justify-content-center">
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <a href="#services" class="btn btn-primary mikish-btn-action w-100">
                                <i class="bi bi-play-fill me-2"></i>
                                Get Started
                            </a>
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <a href="https://www.paypal.com/paypalme/mikishvaughn?locale.x=en_US&country.x=US" 
                               target="_blank" 
                               class="mikish-btn-paypal mikish-btn-action w-100">
                                <i class="bi bi-paypal me-2"></i>
                                PayPal Me
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section id="services" class="mikish-services-section">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h3 class="mikish-section-title">Our Services</h3>
                <p class="mikish-section-subtitle">Professional solutions tailored to your business needs</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="mikish-service-card h-100">
                    <div class="mikish-service-icon">
                        <i class="fas fa-lightbulb"></i>
                    </div>
                    <h4>Innovative Solutions</h4>
                    <p>We provide cutting-edge web solutions to solve your business challenges with modern technology and creative design.</p>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="mikish-service-card h-100">
                    <div class="mikish-service-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <h4>Fast & Efficient</h4>
                    <p>Experience speed and efficiency with our streamlined development process and optimized web applications.</p>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="mikish-service-card h-100">
                    <div class="mikish-service-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h4>Dedicated Support</h4>
                    <p>Our experienced team is here to support you every step of the way, from concept to deployment and beyond.</p>
                </div>
            </div>
        </div>
    </div>
</section>