@model Members.Models.FishSpecies

@{
    ViewData["Title"] = "Fish Species Details";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="text-primary">
                        <i class="bi bi-fish"></i>
                        @Model.CommonName
                    </h1>
                    @if (!string.IsNullOrEmpty(Model.ScientificName))
                    {
                        <p class="mb-0"><em>@Model.ScientificName</em></p>
                    }
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i>
                        Back to Fish Species
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Main Details Card -->
                <div class="col-md-8">
                    <div class="card shadow h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-info-circle"></i>
                                Species Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- Basic Info -->
                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>Common Name:</strong>
                                </div>
                                <div class="col-sm-8">
                                    @Model.CommonName
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ScientificName))
                            {
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>Scientific Name:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <em>@Model.ScientificName</em>
                                    </div>
                                </div>
                            }

                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>Water Type:</strong>
                                </div>
                                <div class="col-sm-8">
                                    @switch (Model.WaterType)
                                    {
                                        case "Fresh":
                                            <span class="badge bg-info">
                                                <i class="bi bi-droplet"></i> Freshwater
                                            </span>
                                            break;
                                        case "Salt":
                                            <span class="badge bg-primary">
                                                <i class="bi bi-water"></i> Saltwater
                                            </span>
                                            break;
                                        case "Both":
                                            <span class="badge bg-success">
                                                <i class="bi bi-droplet"></i><i class="bi bi-water"></i> Both Fresh & Salt
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@Model.WaterType</span>
                                            break;
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Region))
                            {
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>Region:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-geo-alt"></i> @Model.Region
                                        </span>
                                    </div>
                                </div>
                            }

                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>Status:</strong>
                                </div>
                                <div class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> Inactive
                                        </span>
                                    }
                                </div>
                            </div>

                            <!-- Size Information -->
                            @if (Model.MinSize.HasValue || Model.MaxSize.HasValue)
                            {
                                <hr>
                                <h6 class="text-muted">
                                    <i class="bi bi-rulers"></i>
                                    Size Information
                                </h6>
                                
                                @if (Model.MinSize.HasValue)
                                {
                                    <div class="row mb-2">
                                        <div class="col-sm-4">
                                            <strong>Minimum Size:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            @Model.MinSize inches
                                        </div>
                                    </div>
                                }

                                @if (Model.MaxSize.HasValue)
                                {
                                    <div class="row mb-2">
                                        <div class="col-sm-4">
                                            <strong>Maximum Size:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            @Model.MaxSize inches
                                        </div>
                                    </div>
                                }
                            }

                            <!-- Season Information -->
                            @if (Model.SeasonStart.HasValue || Model.SeasonEnd.HasValue)
                            {
                                <hr>
                                <h6 class="text-muted">
                                    <i class="bi bi-calendar-range"></i>
                                    Season Information
                                </h6>
                                
                                {
                                    string[] months = {"", "January", "February", "March", "April", "May", "June", 
                                                     "July", "August", "September", "October", "November", "December"};
                                }

                                @if (Model.SeasonStart.HasValue)
                                {
                                    <div class="row mb-2">
                                        <div class="col-sm-4">
                                            <strong>Season Start:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            months[Model.SeasonStart.Value]
                                        </div>
                                    </div>
                                }

                                @if (Model.SeasonEnd.HasValue)
                                {
                                    <div class="row mb-2">
                                        <div class="col-sm-4">
                                            <strong>Season End:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            months[Model.SeasonEnd.Value]
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-md-4">
                    <!-- Image Card -->
                    @if (!string.IsNullOrEmpty(Model.StockImageUrl))
                    {
                        <div class="card shadow mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">
                                    <i class="bi bi-image"></i>
                                    Species Image
                                </h6>
                            </div>
                            <div class="card-body text-center p-2">
                                <img src="@Model.StockImageUrl" alt="@Model.CommonName" class="img-fluid rounded" style="max-height: 200px;" />
                            </div>
                        </div>
                    }

                    <!-- Regulations Card -->
                    @if (!string.IsNullOrEmpty(Model.RegulationNotes))
                    {
                        <div class="card shadow mb-3 border-warning">
                            <div class="card-header bg-warning text-dark">
                                <h6 class="mb-0">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    Regulations & Notes
                                </h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-0 small">@Model.RegulationNotes</p>
                                <hr class="my-2">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle"></i>
                                    Always verify current local regulations
                                </small>
                            </div>
                        </div>
                    }

                    <!-- Admin Actions -->
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="card shadow border-primary">
                            <div class="card-header bg-primary text-white">
                                <h6 class="mb-0">
                                    <i class="bi bi-gear"></i>
                                    Admin Actions
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i>
                                        Edit Species
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                        Deactivate Species
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>