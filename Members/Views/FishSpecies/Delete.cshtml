@model Members.Models.FishSpecies

@{
    ViewData["Title"] = "Delete Fish Species";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Page Header -->
            <div class="text-center mb-4">
                <h1 class="text-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                    Delete Fish Species
                </h1>
                <p class="text-muted">Are you sure you want to deactivate this species?</p>
            </div>

            <!-- Species Info Card -->
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-fish"></i>
                        Species to Deactivate
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Species Details -->
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Common Name:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.CommonName
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ScientificName))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Scientific Name:</strong>
                            </div>
                            <div class="col-sm-8">
                                <em>@Model.ScientificName</em>
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Water Type:</strong>
                        </div>
                        <div class="col-sm-8">
                            @switch (Model.WaterType)
                            {
                                case "Fresh":
                                    <span class="badge bg-info">Freshwater</span>
                                    break;
                                case "Salt":
                                    <span class="badge bg-primary">Saltwater</span>
                                    break;
                                case "Both":
                                    <span class="badge bg-success">Both Fresh & Salt</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.WaterType</span>
                                    break;
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Region))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Region:</strong>
                            </div>
                            <div class="col-sm-8">
                                @Model.Region
                            </div>
                        </div>
                    }

                    @if (Model.MinSize.HasValue || Model.MaxSize.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Size Range:</strong>
                            </div>
                            <div class="col-sm-8">
                                @if (Model.MinSize.HasValue && Model.MaxSize.HasValue)
                                {
                                    <text>@Model.MinSize" - @Model.MaxSize" inches</text>
                                }
                                else if (Model.MinSize.HasValue)
                                {
                                    <text>Minimum @Model.MinSize" inches</text>
                                }
                                else if (Model.MaxSize.HasValue)
                                {
                                    <text>Maximum @Model.MaxSize" inches</text>
                                }
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.RegulationNotes))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Regulations:</strong>
                            </div>
                            <div class="col-sm-8">
                                <small class="text-muted">@Model.RegulationNotes</small>
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Current Status:</strong>
                        </div>
                        <div class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Warning Message -->
            <div class="alert alert-warning mt-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Note:</strong> This will not permanently delete the species from the database. 
                It will be marked as inactive and hidden from user selections. 
                Existing catch records referencing this species will remain intact.
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Cancel
                </a>
                
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to deactivate this fish species?')">
                        <i class="bi bi-check-circle"></i>
                        Yes, Deactivate Species
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>