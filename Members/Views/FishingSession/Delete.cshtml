@model Members.Models.FishingSession

@{
    ViewData["Title"] = "Delete Fishing Session";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Page Header -->
            <div class="text-center mb-4">
                <h1 class="text-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                    Delete Fishing Session
                </h1>
                @if (!string.IsNullOrEmpty(Model.LocationName))
                {
                    <h2 class="text-warning mb-2">
                        <i class="bi bi-geo-alt"></i>
                        "@Model.LocationName" Session/Album
                    </h2>
                }
                <p class="text-muted">Are you sure you want to delete this fishing session and its album?</p>
            </div>

            <!-- Session Info Card -->
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-journal-text"></i>
                        Session to Delete
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Session Details -->
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Date & Time:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.SessionDate.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Water Type:</strong>
                        </div>
                        <div class="col-sm-8">
                            @switch (Model.WaterType)
                            {
                                case "Fresh":
                                    <span class="badge bg-info">Freshwater</span>
                                    break;
                                case "Salt":
                                    <span class="badge bg-primary">Saltwater</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.WaterType</span>
                                    break;
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.LocationName))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Location:</strong>
                            </div>
                            <div class="col-sm-8">
                                @Model.LocationName
                            </div>
                        </div>
                    }

                    @if (Model.RodReelSetup != null)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Equipment:</strong>
                            </div>
                            <div class="col-sm-8">
                                @Model.RodReelSetup.Name (@Model.RodReelSetup.Type)
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Notes:</strong>
                            </div>
                            <div class="col-sm-8">
                                <small class="text-muted">@Model.Notes</small>
                            </div>
                        </div>
                    }

                    <!-- Catch Count -->
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Catches:</strong>
                        </div>
                        <div class="col-sm-8">
                            @if (ViewBag.Catches != null)
                            {
                                var catches = (List<Members.Models.Catch>)ViewBag.Catches;
                                <span class="badge bg-success">@catches.Count catches</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">0 catches</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Warning Message -->
            <div class="alert alert-warning mt-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Warning:</strong> This will permanently delete the 
                @if (!string.IsNullOrEmpty(Model.LocationName))
                {
                    <strong>"@Model.LocationName"</strong>
                }
                fishing session/album and all associated catches. This action cannot be undone.
            </div>

            @if (ViewBag.Catches != null)
            {
                var catches = (List<Members.Models.Catch>)ViewBag.Catches;
                if (catches.Any())
                {
                    <div class="card border-danger mt-4">
                        <div class="card-header bg-danger text-white">
                            <h6 class="mb-0">
                                <i class="bi bi-fish"></i>
                                Catches That Will Be Deleted (@catches.Count)
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-warning mb-3">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>All @catches.Count catch(es) in this session will be permanently deleted!</strong>
                            </div>
                            
                            <div class="table-responsive">
                                <table class="w-100 mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-nowrap">Time</th>
                                            <th class="text-nowrap">Species</th>
                                            <th class="text-nowrap text-center">Length</th>
                                            <th class="text-nowrap text-center">Weight</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int i = 0;
                                        }
                                        @foreach (var fishCatch in catches.OrderByDescending(c => c.CatchTime ?? c.CreatedAt))
                                        {
                                            <tr class="@(i % 2 == 0 ? "row-even" : "row-odd")">
                                                <!-- Time -->
                                                <td class="text-nowrap py-2 ps-2">
                                                    @if (fishCatch.CatchTime.HasValue)
                                                    {
                                                        <div>@fishCatch.CatchTime.Value.ToString("h:mm tt")</div>
                                                        <small class="text-secondary">@fishCatch.CatchTime.Value.ToString("MMM dd")</small>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-secondary">Unknown</span>
                                                    }
                                                </td>

                                                <!-- Species -->
                                                <td class="text-nowrap py-2">
                                                    <div class="fw-bold">@(fishCatch.Species?.CommonName ?? "Unknown")</div>
                                                    @if (!string.IsNullOrEmpty(fishCatch.Species?.ScientificName))
                                                    {
                                                        <small class="text-secondary">@fishCatch.Species.ScientificName</small>
                                                    }
                                                </td>

                                                <!-- Length -->
                                                <td class="text-nowrap text-center py-2">
                                                    <span class="badge bg-info">@fishCatch.Size.ToString("F1")"</span>
                                                </td>

                                                <!-- Weight -->
                                                <td class="text-nowrap text-center py-2">
                                                    @if (fishCatch.Weight.HasValue)
                                                    {
                                                        <span class="badge bg-success">@fishCatch.Weight.Value.ToString("F1") lbs</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-secondary">-</span>
                                                    }
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Cancel
                </a>
                
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">
                    <i class="bi bi-check-circle"></i>
                    Yes, Delete Session
                </button>
                
                <form asp-action="Delete" method="post" class="d-none" id="deleteForm">
                    <input type="hidden" asp-for="Id" />
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">
                    <strong>Are you absolutely sure you want to delete this fishing session and all its catches?</strong>
                </p>
                <div class="alert alert-warning mb-0">
                    <i class="bi bi-exclamation-triangle"></i> This action cannot be undone.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="document.getElementById('deleteForm').submit();">
                    <i class="bi bi-trash"></i> Yes, Delete Session
                </button>
            </div>
        </div>
    </div>
</div>