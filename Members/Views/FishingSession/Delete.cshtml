@model Members.Models.FishingSession

@{
    ViewData["Title"] = "Delete Fishing Session";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Page Header -->
            <div class="text-center mb-4">
                <h1 class="text-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                    Delete Fishing Session
                </h1>
                <p class="text-muted">Are you sure you want to delete this fishing session?</p>
            </div>

            <!-- Session Info Card -->
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-journal-text"></i>
                        Session to Delete
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Session Details -->
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Date & Time:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.SessionDate.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Water Type:</strong>
                        </div>
                        <div class="col-sm-8">
                            @switch (Model.WaterType)
                            {
                                case "Fresh":
                                    <span class="badge bg-info">Freshwater</span>
                                    break;
                                case "Salt":
                                    <span class="badge bg-primary">Saltwater</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.WaterType</span>
                                    break;
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.LocationName))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Location:</strong>
                            </div>
                            <div class="col-sm-8">
                                @Model.LocationName
                            </div>
                        </div>
                    }

                    @if (Model.RodReelSetup != null)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Equipment:</strong>
                            </div>
                            <div class="col-sm-8">
                                @Model.RodReelSetup.Name (@Model.RodReelSetup.Type)
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Notes:</strong>
                            </div>
                            <div class="col-sm-8">
                                <small class="text-muted">@Model.Notes</small>
                            </div>
                        </div>
                    }

                    <!-- Catch Count -->
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Catches:</strong>
                        </div>
                        <div class="col-sm-8">
                            @if (ViewBag.Catches != null)
                            {
                                var catches = (List<Members.Models.Catch>)ViewBag.Catches;
                                <span class="badge bg-success">@catches.Count catches</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">0 catches</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Warning Message -->
            <div class="alert alert-warning mt-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Warning:</strong> This will permanently delete the fishing session and all associated catches. 
                This action cannot be undone.
            </div>

            @if (ViewBag.Catches != null)
            {
                var catches = (List<Members.Models.Catch>)ViewBag.Catches;
                if (catches.Any())
                {
                    <div class="alert alert-danger mt-3">
                        <i class="bi bi-fish me-2"></i>
                        <strong>This session contains @catches.Count catch(es):</strong>
                        <ul class="mb-0 mt-2">
                            @foreach (var fishCatch in catches.Take(5))
                            {
                                <li>@fishCatch.Species?.CommonName - @fishCatch.Size.ToString("F1")"</li>
                            }
                            @if (catches.Count > 5)
                            {
                                <li><em>... and @(catches.Count - 5) more</em></li>
                            }
                        </ul>
                    </div>
                }
            }

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Cancel
                </a>
                
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger" 
                            onclick="return confirm('Are you absolutely sure you want to delete this fishing session and all its catches? This action cannot be undone.')">
                        <i class="bi bi-check-circle"></i>
                        Yes, Delete Session
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>