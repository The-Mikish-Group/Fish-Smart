@model Members.Models.FishingSession

@{
    ViewData["Title"] = "Fishing Session Details";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="text-primary">
                        <i class="bi bi-journal-text"></i>
                        Fishing Session Details
                    </h1>
                    <p class="text-muted mb-0">@Model.SessionDate.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i>
                        Back to Sessions
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Main Session Info -->
                <div class="col-md-8">
                    <!-- Session Information Card -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-info-circle"></i>
                                Session Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- Basic Info -->
                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>Date & Time:</strong>
                                </div>
                                <div class="col-sm-8">
                                    @Model.SessionDate.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>Water Type:</strong>
                                </div>
                                <div class="col-sm-8">
                                    @switch (Model.WaterType)
                                    {
                                        case "Fresh":
                                            <span class="badge bg-info">
                                                <i class="bi bi-droplet"></i> Freshwater
                                            </span>
                                            break;
                                        case "Salt":
                                            <span class="badge bg-primary">
                                                <i class="bi bi-water"></i> Saltwater
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@Model.WaterType</span>
                                            break;
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.LocationName))
                            {
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>Location:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <i class="bi bi-geo-alt text-danger"></i>
                                        @Model.LocationName
                                    </div>
                                </div>
                            }

                            @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                            {
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>GPS Coordinates:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <small class="text-muted">
                                            @Model.Latitude.Value.ToString("F6"), @Model.Longitude.Value.ToString("F6")
                                            <a href="https://www.google.com/maps?q=@Model.Latitude.Value,@Model.Longitude.Value" 
                                               target="_blank" class="btn btn-sm btn-primary ms-2">
                                                <i class="bi bi-map"></i> View on Map
                                            </a>
                                        </small>
                                    </div>
                                </div>
                            }

                            <!-- Equipment -->
                            @if (Model.RodReelSetup != null)
                            {
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>Rod & Reel:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        @Model.RodReelSetup.Name (@Model.RodReelSetup.Type)
                                        @if (!string.IsNullOrEmpty(Model.RodReelSetup.Brand))
                                        {
                                            <small class="text-muted">- @Model.RodReelSetup.Brand</small>
                                        }
                                    </div>
                                </div>
                            }

                            @if (Model.PrimaryBaitLure != null)
                            {
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <strong>Primary Bait/Lure:</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        @Model.PrimaryBaitLure.Name (@Model.PrimaryBaitLure.Type)
                                        @if (!string.IsNullOrEmpty(Model.PrimaryBaitLure.Brand))
                                        {
                                            <small class="text-muted">- @Model.PrimaryBaitLure.Brand</small>
                                        }
                                    </div>
                                </div>
                            }

                            <!-- Session Notes -->
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <hr>
                                <h6 class="text-muted">
                                    <i class="bi bi-chat-square-text"></i>
                                    Session Notes
                                </h6>
                                <div class="bg-light p-3 rounded">
                                    <p class="mb-0">@Model.Notes</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Environmental Data Card (Premium Features) -->
                    @if (!string.IsNullOrEmpty(Model.WeatherConditions) || !string.IsNullOrEmpty(Model.TideConditions) || !string.IsNullOrEmpty(Model.MoonPhase))
                    {
                        <div class="card shadow mb-4 border-warning">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="mb-0">
                                    <i class="bi bi-star-fill"></i>
                                    Environmental Data (Premium)
                                </h5>
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(Model.WeatherConditions))
                                {
                                    <div class="row mb-2">
                                        <div class="col-sm-4">
                                            <strong>Weather:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            @Model.WeatherConditions
                                            @if (Model.Temperature.HasValue)
                                            {
                                                <span class="badge bg-info ms-2">@Model.Temperature.ValueÂ°F</span>
                                            }
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(Model.WindDirection) || Model.WindSpeed.HasValue)
                                {
                                    <div class="row mb-2">
                                        <div class="col-sm-4">
                                            <strong>Wind:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.WindDirection))
                                            {
                                                @Model.WindDirection
                                            }
                                            @if (Model.WindSpeed.HasValue)
                                            {
                                                <span class="badge bg-secondary ms-2">@Model.WindSpeed.Value mph</span>
                                            }
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(Model.TideConditions))
                                {
                                    <div class="row mb-2">
                                        <div class="col-sm-4">
                                            <strong>Tides:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            @Model.TideConditions
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(Model.MoonPhase))
                                {
                                    <div class="row mb-2">
                                        <div class="col-sm-4">
                                            <strong>Moon Phase:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            @Model.MoonPhase
                                        </div>
                                    </div>
                                }

                                @if (Model.BarometricPressure.HasValue)
                                {
                                    <div class="row mb-2">
                                        <div class="col-sm-4">
                                            <strong>Pressure:</strong>
                                        </div>
                                        <div class="col-sm-8">
                                            @Model.BarometricPressure.Value inHg
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Sidebar -->
                <div class="col-md-4">
                    <!-- Quick Stats Card -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-bar-chart-fill"></i>
                                Session Summary
                            </h5>
                        </div>
                        <div class="card-body text-center">
                            @if (ViewBag.Catches != null)
                            {
                                var catches = (List<Members.Models.Catch>)ViewBag.Catches;
                                <div class="row">
                                    <div class="col-12">
                                        <h2 class="text-success mb-0">@catches.Count</h2>
                                        <small class="text-muted">Fish Caught</small>
                                    </div>
                                </div>
                                
                                @if (catches.Any())
                                {
                                    <hr>
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>@catches.Select(c => c.Species?.CommonName).Distinct().Count()</strong>
                                            <br><small class="text-muted">Species</small>
                                        </div>
                                        <div class="col-6">
                                            <strong>@(catches.Any(c => c.Size > 0) ? catches.Where(c => c.Size > 0).Max(c => c.Size).ToString("F1") + "\"" : "N/A")</strong>
                                            <br><small class="text-muted">Largest</small>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <h2 class="text-muted mb-0">0</h2>
                                <small class="text-muted">Fish Caught</small>
                            }
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="card shadow">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <i class="bi bi-gear"></i>
                                Actions
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-action="AddCatch" asp-route-sessionId="@Model.Id" class="btn btn-success">
                                    <i class="bi bi-plus-circle"></i>
                                    Add Catch
                                </a>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i>
                                    Edit Session
                                </a>
                                <a asp-action="EndSession" asp-route-id="@Model.Id" class="btn btn-info">
                                    <i class="bi bi-stop-circle"></i>
                                    End Session
                                </a>
                                <hr>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                    Delete Session
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Catches List -->
            @if (ViewBag.Catches != null)
            {
                var catches = (List<Members.Models.Catch>)ViewBag.Catches;
                if (catches.Any())
                {
                    <div class="card shadow mt-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-collection"></i>
                                Catches from this Session (@catches.Count)
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var fishCatch in catches)
                                {
                                    <div class="col-md-6 col-lg-4 mb-3">
                                        <div class="card h-100 border-info">
                                            <div class="card-body">
                                                <h6 class="card-title">@fishCatch.Species?.CommonName</h6>
                                                <p class="card-text mb-1">
                                                    <strong>Size:</strong> @fishCatch.Size.ToString("F1")"
                                                    @if (fishCatch.Weight.HasValue)
                                                    {
                                                        <br><strong>Weight:</strong> @fishCatch.Weight.Value.ToString("F1") <text>lbs</text>
                                                    }
                                                </p>
                                                @if (fishCatch.CatchTime.HasValue)
                                                {
                                                    <small class="text-muted">
                                                        Caught at @fishCatch.CatchTime.Value.ToString("h:mm tt")
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>