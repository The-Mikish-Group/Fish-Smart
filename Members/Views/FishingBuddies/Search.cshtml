@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Find Fishing Buddies";
    var searchTerm = ViewBag.SearchTerm as string ?? "";
}

<div class="container my-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-success">
                <i class="bi bi-person-plus"></i>
                Find Fishing Buddies
            </h1>
            <p class="text-muted mb-0">
                Search for other Fish-Smart users to add as fishing buddies
            </p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i>
                Back to Buddies
            </a>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-search"></i>
                Search Users
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Search" method="get">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="form-label">Search by email or username:</label>
                            <input type="text" name="searchTerm" value="@searchTerm" 
                                   class="form-control" placeholder="Enter email or username..." 
                                   required minlength="3" />
                            <div class="form-text">
                                Enter at least 3 characters to search for users
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-search"></i>
                            Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Search Results -->
    @if (!string.IsNullOrEmpty(searchTerm))
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-list"></i>
                    Search Results for "@searchTerm" (@Model.Count found)
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="row">
                        @foreach (var user in Model)
                        {
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" 
                                                 style="width: 50px; height: 50px;">
                                                <i class="bi bi-person-fill text-white" style="font-size: 1.5rem;"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@user.Email</h6>
                                                <small class="text-muted">@user.UserName</small>
                                            </div>
                                        </div>
                                        
                                        <div class="d-grid">
                                            <form asp-action="SendRequest" method="post" class="buddy-request-form">
                                                <input type="hidden" name="buddyUserId" value="@user.Id" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="bi bi-person-plus"></i>
                                                    Send Buddy Request
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-search text-muted" style="font-size: 3rem;"></i>
                        <h5 class="text-muted mt-2">No Users Found</h5>
                        <p class="text-muted">
                            No users found matching "@searchTerm". Try a different search term.
                        </p>
                        <div class="alert alert-info mt-3">
                            <strong>Search Tips:</strong>
                            <ul class="mb-0 text-start">
                                <li>Make sure the email or username is spelled correctly</li>
                                <li>Try searching for part of the email address</li>
                                <li>The user must have a Fish-Smart account to appear in results</li>
                                <li>Users you've already connected with won't appear</li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Instructions -->
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-info-circle text-info" style="font-size: 3rem;"></i>
                <h4 class="text-muted mt-3">How to Find Fishing Buddies</h4>
                <div class="row justify-content-center mt-4">
                    <div class="col-lg-8">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="card bg-light h-100">
                                    <div class="card-body text-center">
                                        <i class="bi bi-search text-primary" style="font-size: 2rem;"></i>
                                        <h6 class="mt-2">1. Search</h6>
                                        <small class="text-muted">
                                            Enter their email or username in the search box above
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card bg-light h-100">
                                    <div class="card-body text-center">
                                        <i class="bi bi-person-plus text-success" style="font-size: 2rem;"></i>
                                        <h6 class="mt-2">2. Connect</h6>
                                        <small class="text-muted">
                                            Send a buddy request to users you'd like to connect with
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card bg-light h-100">
                                    <div class="card-body text-center">
                                        <i class="bi bi-people text-warning" style="font-size: 2rem;"></i>
                                        <h6 class="mt-2">3. Share</h6>
                                        <small class="text-muted">
                                            Once accepted, share catches, albums, and fishing adventures
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const forms = document.querySelectorAll('.buddy-request-form');
    forms.forEach(form => {
        form.addEventListener('submit', function(e) {
            const button = form.querySelector('button[type="submit"]');
            button.disabled = true;
            button.innerHTML = '<i class="bi bi-clock"></i> Sending...';
        });
    });
});
</script>