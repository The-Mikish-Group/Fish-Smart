@model Members.Models.Background

@{
    ViewData["Title"] = "Background Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-eye"></i>
                        Background Details
                    </h4>
                    <div>
                        @if (Model.IsPremium)
                        {
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-star-fill"></i>
                                Premium
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i>
                                Free
                            </span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Image Display -->
                        <div class="col-lg-6 mb-4">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="text-center">
                                    <img src="@Model.ImageUrl" 
                                         alt="@Model.Name" 
                                         class="img-fluid rounded shadow"
                                         style="max-height: 400px; cursor: pointer;"
                                         data-bs-toggle="modal" 
                                         data-bs-target="#imageModal">
                                    <div class="mt-2">
                                        <small class="text-muted">Click to view full size</small>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="text-center bg-light rounded p-5">
                                    <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                                    <p class="text-muted mt-2">No image uploaded</p>
                                </div>
                            }
                        </div>

                        <!-- Background Information -->
                        <div class="col-lg-6">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="bi bi-info-circle"></i>
                                        Information
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td class="fw-bold">Name:</td>
                                            <td>@Model.Name</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Category:</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.Category))
                                                {
                                                    <span class="badge bg-secondary">@Model.Category</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not specified</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Water Type:</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.WaterType))
                                                {
                                                    <span class="badge bg-info">@Model.WaterType</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not specified</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Access Level:</td>
                                            <td>
                                                @if (Model.IsPremium)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-star-fill"></i>
                                                        Premium Only
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i>
                                                        Free for All Users
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Usage:</td>
                                            <td>
                                                <span class="badge bg-primary">
                                                    @Model.Catches.Count catches
                                                </span>
                                            </td>
                                        </tr>
                                    </table>

                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        <div class="mt-3">
                                            <h6>Description:</h6>
                                            <p class="text-muted">@Model.Description</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Usage Statistics -->
                    @if (Model.Catches.Any())
                    {
                        <div class="card mt-4">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-graph-up"></i>
                                    Usage Statistics
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-md-4">
                                        <div class="border rounded p-3">
                                            <h4 class="text-primary">@Model.Catches.Count</h4>
                                            <small class="text-muted">Total Uses</small>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="border rounded p-3">
                                            <h4 class="text-success">@Model.Catches.Select(c => c.Session?.UserId).Distinct().Count()</h4>
                                            <small class="text-muted">Unique Users</small>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="border rounded p-3">
                                            <h4 class="text-info">
                                                @if (Model.Catches.Any())
                                                {
                                                    @Model.Catches.OrderByDescending(c => c.CatchTime).First().CatchTime?.ToString("MMM dd, yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Never</span>
                                                }
                                            </h4>
                                            <small class="text-muted">Last Used</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i>
                            Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                                <i class="bi bi-pencil"></i>
                                Edit
                            </a>
                            @if (!Model.Catches.Any())
                            {
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                    Delete
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-danger" disabled title="Cannot delete background that is being used">
                                    <i class="bi bi-trash"></i>
                                    Delete
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Name</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid">
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <a href="@Model.ImageUrl" download="@(Model.Name.Replace(" ", "_").ToLower() + ".jpg")" class="btn btn-primary">
                        <i class="bi bi-download"></i>
                        Download
                    </a>
                }
            </div>
        </div>
    </div>
</div>