@model Members.Models.Background

@{
    ViewData["Title"] = "Delete Background";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i>
                        Delete Background
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>
                            <i class="bi bi-exclamation-triangle"></i>
                            Are you sure you want to delete this background?
                        </h5>
                        <p class="mb-0">This action cannot be undone. The background image file will be permanently deleted from the server.</p>
                    </div>

                    <div class="row">
                        <!-- Background Preview -->
                        <div class="col-md-5 mb-3">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="text-center">
                                    <img src="@Model.ImageUrl" 
                                         alt="@Model.Name" 
                                         class="img-fluid rounded border"
                                         style="max-height: 200px;">
                                </div>
                            }
                            else
                            {
                                <div class="text-center bg-light rounded p-4">
                                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                        </div>

                        <!-- Background Details -->
                        <div class="col-md-7">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold">Name:</td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Category:</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Category))
                                        {
                                            <span class="badge bg-secondary">@Model.Category</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not specified</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Water Type:</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.WaterType))
                                        {
                                            <span class="badge bg-info">@Model.WaterType</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not specified</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Access Level:</td>
                                    <td>
                                        @if (Model.IsPremium)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-star-fill"></i>
                                                Premium
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Free</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Usage:</td>
                                    <td>
                                        <span class="badge bg-primary">
                                            @Model.Catches.Count catches
                                        </span>
                                    </td>
                                </tr>
                            </table>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="mt-3">
                                    <strong>Description:</strong>
                                    <p class="text-muted mb-0">@Model.Description</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Usage Warning -->
                    @if (Model.Catches.Any())
                    {
                        <div class="alert alert-danger mt-3">
                            <h6>
                                <i class="bi bi-exclamation-circle"></i>
                                Cannot Delete - Background In Use
                            </h6>
                            <p class="mb-0">
                                This background is currently being used by <strong>@Model.Catches.Count catch(es)</strong>. 
                                You cannot delete a background that is being used. To delete this background, you must first 
                                remove or change the background for all catches that use it.
                            </p>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i>
                            Back to List
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-2">
                                <i class="bi bi-eye"></i>
                                View Details
                            </a>
                            @if (!Model.Catches.Any())
                            {
                                <form asp-action="Delete" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this background? This action cannot be undone.')">
                                        <i class="bi bi-trash"></i>
                                        Delete Background
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-danger" disabled>
                                    <i class="bi bi-trash"></i>
                                    Cannot Delete
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alternative Actions -->
            @if (Model.Catches.Any())
            {
                <div class="card mt-3">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-lightbulb"></i>
                            Alternative Actions
                        </h6>
                    </div>
                    <div class="card-body">
                        <p>Since this background cannot be deleted, you can:</p>
                        <ul>
                            <li>
                                <a asp-action="Edit" asp-route-id="@Model.Id">Edit the background details</a> 
                                (name, description, category, premium status)
                            </li>
                            <li>Replace the background image with a new one</li>
                            <li>Change it to premium-only to limit access</li>
                            <li>Contact users to change their catch backgrounds before deletion</li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>