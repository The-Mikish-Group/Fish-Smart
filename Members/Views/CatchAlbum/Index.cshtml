@model List<Members.Models.CatchAlbum>

@{
    ViewData["Title"] = "My Catch Albums";
}

<div class="container my-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-success">
                <i class="bi bi-collection-fill"></i>
                My Catch Albums
            </h1>
            <p class="text-light mb-0">
                Organize and showcase your fishing achievements
                <span class="badge bg-info ms-2">@Model.Count albums</span>
            </p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i>
                Create New Album
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Albums Grid -->
        <div class="row">
            @foreach (var album in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-success">
                        <!-- Album Cover -->
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                             style="min-height: 200px; background: linear-gradient(135deg, #e8f5e8 0%, #c8e6c9 100%); overflow: hidden;">
                            @if (!string.IsNullOrEmpty(album.CoverImageUrl))
                            {
                                <a asp-controller="ImageViewer" asp-action="AlbumCover" asp-route-id="@album.Id" 
                                   asp-route-returnUrl="@Url.Action("Index")" class="d-block w-100">
                                    <img src="@album.CoverImageUrl" alt="@album.Name" 
                                         style="width: 100%; height: auto; display: block; cursor: pointer;" 
                                         title="Click to view full size and edit" />
                                </a>
                            }
                            else
                            {
                                <div class="text-center text-success">
                                    <i class="bi bi-collection display-1"></i>
                                    <div class="mt-2">
                                        <small class="fw-bold">@album.AlbumCatches.Count catches</small>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="card-body">
                            <h5 class="card-title text-success mb-2">
                                <a asp-action="Details" asp-route-id="@album.Id" class="text-decoration-none text-success">
                                    @album.Name
                                </a>
                            </h5>
                            
                            @if (!string.IsNullOrEmpty(album.Description))
                            {
                                <p class="card-text text-secondary small">
                                    @(album.Description.Length > 100 ? album.Description.Substring(0, 100) + "..." : album.Description)
                                </p>
                            }

                            <!-- Album Stats -->
                            <div class="row text-center mb-3">
                                <div class="col-6">
                                    <small class="text-secondary">Catches</small>
                                    <div class="fw-bold text-success">@album.AlbumCatches.Count</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-secondary">Created</small>
                                    <div class="fw-bold">@album.CreatedAt.ToString("MMM dd")</div>
                                </div>
                            </div>

                            <!-- Privacy Badge -->
                            @if (album.IsPublic)
                            {
                                <span class="badge bg-info mb-2">
                                    <i class="bi bi-globe"></i> Public
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary mb-2">
                                    <i class="bi bi-lock"></i> Private
                                </span>
                            }

                            <!-- Action Buttons moved to card body for visibility -->
                            <div class="d-grid gap-2 mt-3">
                                <a asp-action="Details" asp-route-id="@album.Id" class="btn btn-success btn-sm">
                                    <i class="bi bi-eye"></i> View Album
                                </a>
                                @if (string.IsNullOrEmpty(album.CoverImageUrl))
                                {
                                    <a asp-action="UploadPhoto" asp-route-id="@album.Id" class="btn btn-primary btn-sm">
                                        <i class="bi bi-camera"></i> Add Photo
                                    </a>
                                }
                                <div class="d-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@album.Id" class="btn btn-warning btn-sm flex-fill">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@album.Id" class="btn btn-danger btn-sm flex-fill">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination (if needed in future) -->
        @if (Model.Count > 12)
        {
            <div class="d-flex justify-content-center mt-4">
                <small class="text-light">Showing @Model.Count albums</small>
            </div>
        }
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-collection display-1 text-light"></i>
            </div>
            <h3 class="text-light">No Albums Yet</h3>
            <p class="text-light mb-4">Create your first catch album to organize your fishing achievements!</p>
            
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle"></i>
                Create Your First Album
            </a>
            
            <!-- Tips for new users -->
            <div class="row justify-content-center mt-5">
                <div class="col-lg-8">
                    <div class="card border-info">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0">
                                <i class="bi bi-lightbulb-fill"></i>
                                Getting Started with Albums
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="text-info">üì∏ Organize Your Catches</h6>
                                    <p class="small mb-3">Group your catches by trips, species, or locations to tell your fishing story.</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-info">üèÜ Showcase Achievements</h6>
                                    <p class="small mb-3">Create trophy albums for your biggest catches and most memorable moments.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>